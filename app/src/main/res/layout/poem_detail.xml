<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical" 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@drawable/bg_image2">
 <ScrollView    android:id="@+id/SCROLL_VIEW"
 				android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"                
                android:layout_marginBottom="100px">  
         <LinearLayout android:orientation="vertical"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">                         
              <TextView android:id="@+id/DET_SHIMING"
               		   android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black"
                       android:textSize="20sp"
                       android:layout_margin="5px"
                       android:gravity="center"/>
               <TextView android:id="@+id/DET_SHIREN" 
               		   android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black" 
                       android:gravity="center"/>              
               <TextView android:id="@+id/DET_YUANWEN"  
               		   android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black" 
                       android:textSize="16sp"
                       android:layout_margin="5px"
                       android:gravity="center"/>  
                 <TextView  android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black" 
                       android:textSize="16sp"
                       android:layout_margin="5px"
                       android:text="@string/del_title_pingxi" />   
                 <TextView android:id="@+id/DET_PINGXI"  
               		   android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black" 
                       android:textSize="14sp"
                       android:layout_margin="5px" />   
       			<TextView  android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black" 
                       android:textSize="16sp"
                       android:layout_margin="5px" 
                       android:text="@string/del_title_zhushi"/>     
                  <TextView android:id="@+id/DET_ZHUSHI"  
               		   android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@drawable/black" 
                       android:textSize="14sp"
                       android:layout_margin="5px"/>  
        </LinearLayout>        
</ScrollView>

 <LinearLayout android:id="@+id/DET_BUTTONBAR" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:background="@drawable/ic_bg" android:layout_alignParentBottom="true" android:gravity="center_vertical" style="@android:style/ButtonBar">
     <ImageButton android:id="@+id/BTN_FAVOR2" android:src="@drawable/ic_favor_del" android:background="@drawable/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
     <ImageButton android:id="@+id/BTN_PLAY" android:src="@drawable/ic_play" android:background="@drawable/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
     <ImageButton android:id="@+id/BTN_IMAGE" android:src="@drawable/ic_image" android:background="@drawable/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
     <ImageButton android:id="@+id/BTN_POET" android:src="@drawable/ic_poet" android:background="@drawable/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" />
</LinearLayout>

</RelativeLayout>


