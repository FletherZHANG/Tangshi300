    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.flether.android.tangshi300.BookCover"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flether.android.tangshi300.MainPage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.flether.android.tangshi300.PoemPage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.flether.android.tangshi300.ImagePage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.flether.android.tangshi300.PoetPage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.flether.android.tangshi300.PrePage"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.flether.android.tangshi300.InfoPage"
            android:screenOrientation="portrait" />
    </application>

</manifest>